<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
	<ScrollingMessageFrame name="vdwsLooty" parent="ChatFrame1" enableMouse="true" propagateHyperlinksToParent="true" movable="true" hidden="true" frameStrata="MEDIUM" clampedToScreen="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture setAllPoints="true">
					<Color r="0" g="0" b="0" a="0.35"/>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="BGtexture1" atlas="Artifacts-BG-Shadow" useAtlasSize="false">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="BGtexture2" atlas="GarrMission-NeutralChest" useAtlasSize="false">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" font="vdw_FFshadow_18" justifyV="MIDDLE" justifyH="CENTER">
					<Anchors>
						<Anchor point="CENTER" relativePoint="TOP" x="0" y="10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:RegisterEvent("CHAT_MSG_LOOT")
				self:RegisterEvent("CHAT_MSG_MONEY")
				self:RegisterEvent("CHAT_MSG_CURRENCY")
				self:RegisterEvent("CHAT_MSG_COMBAT_XP_GAIN")
				self:RegisterEvent("CHAT_MSG_COMBAT_HONOR_GAIN")
				self:RegisterEvent("CHAT_COMBAT_MSG_ARENA_POINTS_GAIN")
				self:RegisterEvent("CHAT_MSG_COMBAT_FACTION_CHANGE")
				self:RegisterEvent("CHAT_MSG_TRADESKILLS")
				self:RegisterEvent("CHAT_MSG_SKILL")
				self:RegisterEvent("CHAT_MSG_COMBAT_MISC_INFO")
				self:RegisterEvent("CHAT_MSG_OPENING")
				self:SetJustifyH("LEFT")
				self:SetInsertMode(2)
				self:SetTextCopyable(true)
			</OnLoad>
		</Scripts>
		<Frames>
			<Frame parentKey="Box" enableMouse="true" movable="true" hidden="true" clampedToScreen="true">
				<Size x="24"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="0"/>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND" textureSubLevel="-1">
						<Texture setAllPoints="true">
							<Color r="0" g="0" b="0" a="0.32"/>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
<!-- Scroll Bar -->
					<Frame parentKey="ScrollBar" mixin="MinimalSliderWithSteppersMixin" enableMouse="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="4" y="0"/>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" x="4" y="0"/>
						</Anchors>
						<Size x="16"/>
						<Frames>
							<Button parentKey="Back">
								<Size x="17" y="11"/>
								<Anchors>
									<Anchor point="TOP" relativePoint="TOP" x="0" y="0"/>
								</Anchors>
								<NormalTexture parentKey="NormalTexture" atlas="minimal-scrollbar-small-arrow-top" useAtlasSize="true">
								</NormalTexture>
								<HighlightTexture atlas="minimal-scrollbar-small-arrow-top" useAtlasSize="true" alphaMode="ADD">
								</HighlightTexture>
							</Button>
							<Button parentKey="Forward">
								<Size x="17" y="11"/>
								<Anchors>
									<Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="0"/>
								</Anchors>
								<NormalTexture parentKey="NormalTexture" atlas="minimal-scrollbar-small-arrow-bottom" useAtlasSize="true">
								</NormalTexture>
								<HighlightTexture atlas="minimal-scrollbar-small-arrow-bottom" useAtlasSize="true" alphaMode="ADD">
								</HighlightTexture>
							</Button>
							<Slider parentKey="Slider" orientation="VERTICAL" mixin="MinimalSliderMixin">
								<Anchors>
									<Anchor point="TOPLEFT" relativeKey="$parent.Back" relativePoint="BOTTOMLEFT" x="0" y="0"/>
									<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Forward" relativePoint="TOPRIGHT" x="0" y="0"/>
								</Anchors>
								<KeyValues>
									<KeyValue key="obeyStepOnDrag" value="true" type="boolean"/>
								</KeyValues>
								<Layers>
									<Layer>
										<Texture parentKey="Left" atlas="minimal-scrollbar-small-track-top" useAtlasSize="true">
											<Anchors>
												<Anchor point="TOP"/>
											</Anchors>
										</Texture>
										<Texture parentKey="Right" atlas="minimal-scrollbar-small-track-bottom" useAtlasSize="true">
											<Anchors>
												<Anchor point="BOTTOM"/>
											</Anchors>
										</Texture>
										<Texture parentKey="Middle" atlas="!minimal-scrollbar-track-middle" useAtlasSize="true">
											<Anchors>
												<Anchor point="TOPLEFT" relativeKey="$parent.Left" relativePoint="BOTTOMLEFT" x="0" y="0"/>
												<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Right" relativePoint="TOPRIGHT" x="0" y="0"/>
											</Anchors>
										</Texture>
									</Layer>
								</Layers>
								<ThumbTexture parentKey="Thumb" atlas="Minimal_SliderBar_Button" useAtlasSize="false">
									<Size x="18" y="17"/>
								</ThumbTexture>
								<Scripts>
									<OnLoad method="OnLoad"/>
								</Scripts>
							</Slider>
						</Frames>
						<Scripts>
							<OnLoad method="OnLoad"/>
						</Scripts>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</ScrollingMessageFrame>
	<Script file="VDWS_Looty.lua"/>
</Ui>
