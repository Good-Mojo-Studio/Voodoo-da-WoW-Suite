<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
	<Frame name="vdwsOptions3" inherits="vdwOptionsPanel" parent="UIParent">
		<Frames>
<!-- Options Box 1 Error frame -->
			<Frame name="$parentBox1" inherits="vdwOptionsBox">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x ="8" y="-64"/>
				</Anchors>
				<Frames>
<!-- Check Button 1, Change -->
					<CheckButton name="$parentCheckButton1" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="8" y="-24"/>
						</Anchors>
					</CheckButton>
<!-- Pop Out 1 Fonts -->
					<Button name="$parentPopOut1" inherits="vdwPopOut">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentCheckButton1" relativePoint="TOPLEFT" x="0" y="-40"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
<!-- Options Box 1 FPS frame -->
			<Frame name="$parentBox2" inherits="vdwOptionsBox">
				<Frames>
<!-- Check Button 1, Change -->
					<CheckButton name="$parentCheckButton1" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="8" y="-24"/>
						</Anchors>
					</CheckButton>
<!-- Pop Out 1 Fonts style -->
					<Button name="$parentPopOut1" inherits="vdwPopOut">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentCheckButton1" relativePoint="TOPLEFT" x="0" y="-40"/>
						</Anchors>
					</Button>
<!-- Pop Out 2 Fonts color -->
					<Button name="$parentPopOut2" inherits="vdwPopOut">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parentPopOut1" relativePoint="RIGHT" x="8" y="0"/>
						</Anchors>
					</Button>
<!-- Pop Out 3 Background style -->
					<Button name="$parentPopOut3" inherits="vdwPopOut">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentPopOut1" relativePoint="BOTTOMLEFT" x="0" y="-12"/>
						</Anchors>
					</Button>
<!-- Pop Out 4 Background color -->
					<Button name="$parentPopOut4" inherits="vdwPopOut">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parentPopOut3" relativePoint="RIGHT" x="8" y="0"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
<!-- Options Box 3 et chetera -->
			<Frame name="$parentBox3" inherits="vdwOptionsBox">
				<Frames>
<!-- Check Button 1, Show Chat Baclground -->
					<CheckButton name="$parentCheckButton1" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="8" y="-24"/>
						</Anchors>
					</CheckButton>
<!-- Check Button 2, Show Micro Menu Container Background -->
					<CheckButton name="$parentCheckButton2" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentCheckButton1" relativePoint="BOTTOMLEFT" x="0" y="-12"/>
						</Anchors>
					</CheckButton>
<!-- Check Button 3, Show Status Bar Text -->
					<CheckButton name="$parentCheckButton3" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentCheckButton2" relativePoint="BOTTOMLEFT" x="0" y="-12"/>
						</Anchors>
					</CheckButton>
<!-- Check Button 4, Turn Map Clock into 24hours -->
					<CheckButton name="$parentCheckButton4" inherits="vdwCheckButton">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentCheckButton3" relativePoint="BOTTOMLEFT" x="0" y="-12"/>
						</Anchors>
					</CheckButton>
				</Frames>
			</Frame>
		</Frames>
	</Frame>
	<Script file="VDWS_Options_3.lua"/>
</Ui>
